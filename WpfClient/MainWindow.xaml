<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Content -->
            <RowDefinition Height="*"/>
            <!-- Footer -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- HEADER -->
        <Border Grid.Row="0" 
                Background="#2a2a2a"  Padding="10">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Header col1" Grid.Column="0" Grid.Row="0"
                         Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <TextBlock Text="Header col2" Grid.Column="1" Grid.Row="1"
                        Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <TextBlock Text="Header col3" Grid.Column="2" Grid.Row="0"
                        Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Border Grid.Row="1" 
                Background="#2a2a2a" >
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Phase and basic info-->
                    <RowDefinition Height="150"/>
                    <!-- Details -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
               
                <!-- Basic info -->
                <Border Grid.Row="0" Background="Bisque">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="0:0" Foreground="White"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="0:0" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="0:0" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="0" Grid.Column="1"
                       Text="0:0" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="1"
                       Text="0:0" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="0:0" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="0" Grid.Column="2"
                       Text="0:0" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="2"
                       Text="0:0" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Grid.Column="2"
                       Text="0:0" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                   </Grid>
                </Border>


                <!-- Details -->
                <Border Grid.Row="1">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="Purple">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                Text="Details Title" Foreground="White"
                                VerticalAlignment="Center" HorizontalAlignment="Center"/>


                                <TextBlock Grid.Row="1" Grid.Column="0"
                                Text="Detail Title" Foreground="White"
                                VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <TextBlock Grid.Row="1" Grid.Column="1"
                                Text="Detail Value" Foreground="White"
                                VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1" Background="Cyan">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                Text="Details Title" Foreground="White"
                                VerticalAlignment="Center" HorizontalAlignment="Center"/>


                                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                Text="Detail Title" Foreground="White"
                                VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                Text="Detail Value" Foreground="White"
                                VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="2" Background="Green">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                    Text="Details Title" Foreground="White"
                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>


                                                                <TextBlock Grid.Row="1" Grid.Column="0"
                                    Text="Detail Title" Foreground="White"
                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                    Text="Detail Value" Foreground="White"
                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>

                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Grid.ColumnSpan="3"
                Background="#2a2a2a"  Padding="10" >
            <TextBlock Text="Footer" Foreground="White"/>
        </Border>
    </Grid>
</Window>
