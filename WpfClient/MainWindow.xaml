<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfClient.ViewModels"
        xmlns:views="clr-namespace:WpfClient.Views"
        Title="Astronomy" Width="640" Height="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:NowViewModel}">
            <views:NowView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:WeekViewModel}">
            <views:WeekView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <TextBlock Text="{Binding CurrentPage}" Margin="10"/>
        <ContentControl Content="{Binding CurrentPage}"/>
    </Grid>
</Window>
