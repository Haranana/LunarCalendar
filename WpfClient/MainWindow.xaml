<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfClient.ViewModels"
        xmlns:views="clr-namespace:WpfClient.Views"
        Title="Astronomy Calendar" Width="400" Height="680"
        ResizeMode="NoResize"        
        Background="{StaticResource ColorStrong}"
        BorderBrush="{StaticResource ColorMedium}"
        Foreground="White"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:NowViewModel}">
            <views:NowView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:WeekViewModel}">
            <views:WeekView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentPage}"/>
    </Grid>
</Window>
